.dishes{
  display: flex;
  padding:20px 10px;
  padding-bottom: 0;
}
.dishesImg{
  flex: 2;
}
.dishesRight{
flex:5;
margin-left: 10px;
}
.cart{
  font-size: 12px;
  padding-bottom: 100px;
}
.cartBottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  background-color: #DDDDDD;
  font-size: 12px;
}
.chooseType{
  position: fixed;
  bottom: 50px;
  width: 100%;
  height: 50px;
  background-color: #DDDDDD;
  font-size: 12px;
}
.chooseType .radio-group{
  display: flex;
}
.chooseType .radio{
  flex:1;
  text-align: center;
}
.toOrder{
  float:right;
  height:50px; 
}
